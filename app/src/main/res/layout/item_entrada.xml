<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:layout_marginHorizontal="8dp"
    app:cardBackgroundColor="#F8F8F8"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Palabra principal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_palabra"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="serif"
                android:text="PALABRA"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_categoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_category_tag"
                android:fontFamily="serif"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:text="s."
                android:textColor="#E06B36"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Origen -->
        <TextView
            android:id="@+id/tv_origen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="serif"
            android:text="(del esp.)"
            android:textColor="#666666"
            android:textSize="12sp"
            android:textStyle="italic" />

        <!-- Definición -->
        <TextView
            android:id="@+id/tv_definicion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="serif"
            android:text="Definición de la palabra"
            android:textColor="#333333"
            android:textSize="14sp" />

        <!-- Ejemplo -->
        <TextView
            android:id="@+id/tv_ejemplo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_example"
            android:fontFamily="serif"
            android:padding="8dp"
            android:text="Ejemplo de uso"
            android:textColor="#2E5D31"
            android:textSize="13sp"
            android:textStyle="italic" />

        <!-- Referencias -->
        <TextView
            android:id="@+id/tv_referencias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="serif"
            android:text="Cf. referencias"
            android:textColor="#666666"
            android:textSize="12sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>